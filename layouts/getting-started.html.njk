<head>
<meta charset="utf-8" />
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
<meta name="viewport" content="width=device-width" />

{% import "ak_core_macros.njk" as ak_core with context %}
{% import "ak_base_macros.njk" as ak_base with context %}

<title>{{ title }}</title>
{{ ak_base.headerMeta() }}
{{ ak_core.XMLSitemap("/sitemap.xml") }}
{# {{ ak_core.googleSiteVerification("We are good") }} #}
{{ ak_base.linkRelTags() }}
{{ ak_base.canonicalURL() }}

{{ ak_core.stylesheets() }}
{{ ak_core.headerJavaScript() }}

<partial file-name="fb-page-header.html"></partial>

<partial file-name="twitter-card-header.html.ejs"></partial>

</head>
<body>

<partial file-name="site-navbar.html.ejs"></partial>

<div class="container" role="main">
<div class="row">
<partial file-name="header.html.ejs"></partial>
</div>

<div class="row">

    <div class="col-md-10">
        <div class="row">
            {% if hidebreadcrumb %}
            {% else %}
                <section id="breadcrumb" class="col-sm-12">
                    <breadcrumb-trail></breadcrumb-trail>
                </section>
            {% endif %}
            {% if hidepubldate %}
            {% else %}
                <section id="category-tags" class="col-sm-12">
                    {{ ak_base.doPublicationDate() }}
                </section>
            {% endif %}
        </div>
        <div class="row">
        <section id="left" class="col-sm-2 overflow-auto">
            <p><a href="/quick-start/index.html"></a></p>
            <p><a href="/quick-start/initialization.html"></a></p>
            <p><a href="/quick-start/configuration.html"></a></p>
            <p><a href="/quick-start/directories.html"></a></p>
            <p><a href="/quick-start/outputdir.html"></a></p>
            <p><a href="/quick-start/content.html"></a></p>
            <p><a href="/quick-start/templates.html"></a></p>
            <p><a href="/quick-start/theming.html"></a></p>
            <p><a href="/quick-start/plugins.html"></a></p>
        </section>
        <article class="col-sm-10 overflow-auto">
            {% if teaser %}<p><strong>{{ teaser }}</p> {% endif %}
            {{ content }}
            <partial file-name='disqus.html'/>
        </article>
    </div>

    </div>
    <div class="col-md-2">
        <partial file-name="sidebar.html.ejs"></partial>
        <partial file-name="ebook-sidebar.html"/>
    </div>

</div>

<footer class="row" style="text-align: center; height: 100px;">
<!-- partial file-name="ebook-footer.html"/ -->
<partial file-name="footer.html.ejs"></partial>
</footer>
</div>

{{ ak_core.footerJavaScript() }}
<partial file-name="google-analytics.html"></partial>


</body>
</html>
