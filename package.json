{
  "author": {
    "name": "David Herron",
    "email": "david@davidherron.com",
    "url": "http://davidherron.com"
  },
  "name": "akashacms-website",
  "description": "AkashaCMS.com website source",
  "homepage": "http://akashacms.com/",
  "repository": {
    "type": "git",
    "url": "git://github.com/akashacms/akashacms-website.git"
  },
  "scripts": {
    "prebuild": "akasharender copy-assets config.js",
    "build": "akasharender render config.js && npm run minify",
    "minify": "html-minifier --collapse-whitespace --conservative-collapse --html5 --keep-closing-slash --preserve-line-breaks --remove-comments --file-ext html  --input-dir out --output-dir out",
    "deploy": "cd out && rsync --archive --delete --verbose ./ reikiman@akashacms.com:akashacms.com/ ",
    "preview": "cd out && ../node_modules/.bin/hostr"
  },
  "dependencies": {
    "mahabhuta": "akashacms/mahabhuta",
    "akashacms-base": "akashacms/akashacms-base",
    "akashacms-blog-podcast": "akashacms/akashacms-blog-podcast",
    "akashacms-booknav": "akashacms/akashacms-booknav",
    "akashacms-breadcrumbs": "akashacms/akashacms-breadcrumbs",
    "akashacms-document-viewers": "akashacms/akashacms-document-viewers",
    "akashacms-embeddables": "akashacms/akashacms-embeddables",
    "akashacms-theme-bootstrap": "akashacms/akashacms-theme-bootstrap",
    "akasharender": "akashacms/akasharender",
    "async": "^2.0.0-rc.4",
    "jquery": "*",
    "bootstrap": "*",
    "globfs": "*",
    "oembed": "^0.1.0",
    "html-minifier": "^3.1.1",
    "hostr": "^2.x",
    "akashacms-theme-boilerplate": "akashacms/akashacms-theme-boilerplate",
    "akashacms-footnotes": "akashacms/akashacms-footnotes",
    "akashacms-tagged-content": "akashacms/akashacms-tagged-content",
    "akashacms-adblock-checker": "akashacms/akashacms-adblock-checker",
    "akashacms-affiliates": "akashacms/akashacms-affiliates",
    "akasharender-epub": "akashacms/akasharender-epub",
    "epubtools": "epubtools/epubtools#akasharender",
    "epub-website": "akashacms/epub-website"
  }
}
