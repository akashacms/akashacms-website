{
  "author": {
    "name": "David Herron",
    "email": "david@davidherron.com",
    "url": "http://davidherron.com"
  },
  "name": "akashacms-website",
  "description": "AkashaCMS.com website source",
  "homepage": "http://akashacms.com/",
  "repository": {
    "type": "git",
    "url": "git://github.com/akashacms/akashacms-website.git"
  },
  "scripts": {
    "prebuild": "akasharender copy-assets config.js",
    "build": "akasharender render config.js && npm run minify",
    "minify": "html-minifier --collapse-whitespace --conservative-collapse --html5 --keep-closing-slash --preserve-line-breaks --remove-comments --file-ext html  --input-dir out --output-dir out2",
    "postminify": "globfs copy out2 out && rm -rf out2",
    "postinstall": "bower --allow-root install",
    "deploy": "cd out && rsync --archive --delete --verbose ./ reikiman@akashacms.com:akashacms.com/ ",
    "preview": "cd out && ../node_modules/.bin/hostr"
  },
  "dependencies": {
    "mahabhuta": ">=0.6.1",
    "akashacms-base": "akashacms/akashacms-base#akasharender",
    "akashacms-blog-podcast": "akashacms/akashacms-blog-podcast#akasharender",
    "akashacms-booknav": "akashacms/akashacms-booknav#akasharender",
    "akashacms-breadcrumbs": "akashacms/akashacms-breadcrumbs#akasharender",
    "akashacms-embeddables": "akashacms/akashacms-embeddables#akasharender",
    "akashacms-social-buttons": "akashacms/akashacms-social-buttons#akasharender",
    "akashacms-theme-bootstrap": "akashacms/akashacms-theme-bootstrap#akasharender",
    "akasharender": ">=0.5",
    "async": "^2.0.0-rc.4",
    "bower": "^1.7.9",
    "globfs": "*",
    "oembed": "^0.1.0",
    "html-minifier": "^3.1.1",
    "hostr": "^2.x"
  }
}
